@using S7.Net;
@model ConexaoPLCModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h1>Conexão com PLC</h1>

                <form asp-controller="ConexaoPLC" asp-action="Conectar" method="post">
                    <div class="form-group">
                        <label class="control-label">Tipo de CPU</label>
                        <select class="form-select col-5" aria-label="Default select example"
                        asp-for="TipoCPU" asp-items="Html.GetEnumSelectList<CpuType>()">
                            <option value="0" disabled selected>Selecione o CLP</option>
                        </select>
                        <span asp-validation-for="TipoCPU" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">IP</label>
                        <input class="form-control col-5" name="Ip" type="text" asp-for="Ip" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Rack</label>
                        <input class="form-control col-5" name="Rack" type="number" asp-for="Rack" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Slot</label>
                        <input class="form-control col-5" name="Slot" type="number" asp-for="Slot" />
                    </div>

                    <button id="cnx_btn" type="submit" class="btn btn-primary btn-lg p-2">Conectar</button>
                </form>

                

            </div>
        </div>
    </div>
</div>